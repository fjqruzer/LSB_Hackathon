rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Users can read/write their own profile
    // Simplified rule to prevent permission issues
    match /users/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
    
    // OTP codes - allow read/write for authentication purposes
    // These are temporary and will be cleaned up automatically
    match /otp_codes/{email} {
      allow read, write: if true; // Allow during development
      // In production, you might want to restrict this to authenticated requests
      // allow read, write: if request.auth != null;
    }
    
    // Listings - users can create, read, update, and delete their own listings
    // Other users can read active listings
    match /listings/{listingId} {
      // Allow users to create listings with their own UID
      allow create: if request.auth != null && 
                     request.auth.uid == request.resource.data.userId;
      
      // Allow users to read, update, and delete their own listings
      allow read, update, delete: if request.auth != null && 
                                   request.auth.uid == resource.data.userId;
      
      // Allow all authenticated users to read active listings (for browsing)
      allow read: if request.auth != null && 
                   resource.data.status == 'active' && 
                   resource.data.isActive == true;
    }
    
    // Allow authenticated users to read public data (if any)
    match /public/{document=**} {
      allow read: if request.auth != null;
    }
    
    // Default deny all
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
